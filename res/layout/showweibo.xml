<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/home_title_showweibo"
        layout="@layout/home_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15px"
        android:layout_marginTop="10px"
        android:orientation="vertical"
        android:paddingLeft="0px"
        android:paddingRight="5px" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/show_image_head"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/show_content_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/show_image_head"
                android:padding="5dp"
                android:textColor="#424952"
                android:textSize="40px" />

            <TextView
                android:id="@+id/show_content_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/content_user"
                android:layout_alignParentRight="true"
                android:textColor="#f7a200"
                android:textSize="35px" />
        </RelativeLayout>

        <TextView
            android:id="@+id/show_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4px"
            android:textColor="#424952"
            android:textSize="30px" >
        </TextView>

        <ImageView
            android:id="@+id/show_content_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>