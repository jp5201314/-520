<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_title_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_below_nor1">

    <ImageButton
        android:id="@+id/btn_home_write_weibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/home_title_button_style"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="5.0dip"
        android:src="@drawable/ic_menu_edit" />


    <TextView
        android:id="@+id/tv_home_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/home_title"
        android:textColor="@color/crimson"
        android:textSize="@dimen/home_title_text_size" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical">

        <ProgressBar
            android:id="@+id/progressbar_home_reload"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btn_home_reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/home_title_button_style"
            android:visibility="visible"
            android:src="@drawable/wb_icon_refresh" />

    </FrameLayout>
</FrameLayout>